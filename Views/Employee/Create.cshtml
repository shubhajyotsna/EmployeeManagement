@model EmployeeManagement.Models.Employee

<h2>Add Employee</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DesignationId">Designation</label>
        <select asp-for="DesignationId" asp-items="@(new SelectList(ViewBag.Designations, "Id", "Name"))" class="form-control"></select>
        <span asp-validation-for="DesignationId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PaymentRuleId">Payment Rule</label>
        <select asp-for="PaymentRuleId" asp-items="@(new SelectList(ViewBag.PaymentRules, "Id", "Name"))" class="form-control"></select>
        <span asp-validation-for="PaymentRuleId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>
