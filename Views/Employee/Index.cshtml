@model IEnumerable<EmployeeManagement.Models.Employee>

<h2>Employee List</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Designation</th>
            <th>Payment Rule</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.Id</td>
                <td>@employee.Name</td>
                <td>@employee.Designation.Name</td>
                <td>@employee.PaymentRule.RuleName</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@employee.Id">Edit</a> 
                    <a asp-action="Delete" asp-route-id="@employee.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
